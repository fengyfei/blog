<style lang="less">
  .content {
    padding: 0 20px;
  }
  .userCard {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 14rem;
  }
  .avatar {
    border-radius: 50%;
    background-color: #c7c7c7;
    height: 5rem;
    width: 5rem;
  }
  .name {
    padding-top: 0.5rem;
  }
  .label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f6f8fa;
    border-radius: 4px;
    border-bottom: 1px solid white;
    padding: 1rem;
  }
  .labelText {
    font-size: 1rem;
  }
  .nextIcon {
    height: 1rem;
    width: 1rem;
  }
</style>

<template>
  <view>
    <view class="topBorder"></view>
    <view class="content" style="height: {{windowHeight}}px;">
      <view class="userCard">
        <image
          class="avatar"
          src="{{userInfo.avatar}}">
        </image>
        <text class="name">{{userInfo.nickName}}</text>
      </view>
      <view
        wx:for="{{label}}"
        wx:key="index"
        class="label"
        id="{{index}}"
        @tap="labelTap">
        <text class="labelText">{{label[index]}}</text>
        <image
          src="../images/next.png"
          class="nextIcon"></image>
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import { mine } from '../libs/github'

  export default class Mine extends wepy.page {
    config = {
      navigationBarTitleText: '我的'
    }

    data = {
      windowWidth: 0,
      windowHeight: 0,
      userInfo: null,
      label: ['技术猫', 'Github', 'Email']
    }

    methods = {
      // 点击选项
      labelTap(e) {
        let self = this
        let item = ''
        let id = e.currentTarget.id

        item = self.userInfo.contact[Number(id)]

        // 弹起 Action Sheet
        wepy.showActionSheet({
          itemList: [item]
        }).then(function() {
          // 点击列表项即可复制
          wx.setClipboardData({
            data: item,
            success: function(res) {
              wepy.showToast({
                icon: 'success',
                mask: 'true',
                title: '复制成功',
                duration: 2000
              })
            }
          })
        }).catch(() => {})
      }
    }

    async onLoad() {
      let self = this

      // 获取可用屏幕宽高
      if (getCurrentPages().length === 1) {
        try {
          self.windowHeight = wepy.getStorageSync('windowHeight')
          self.windowWidth = wepy.getStorageSync('windowWidth')
        } catch (e) {}
      } else {
        wepy.getSystemInfo({
          success: function (res) {
            self.windowHeight = res.windowHeight
            self.windowWidth = res.windowWidth
          }
        })
      }

      this.$apply()
    }

    async onShow() {
      let self = this

      let userInfo = await mine()

      self.userInfo = userInfo

      this.$apply()
    }
  }
</script>
